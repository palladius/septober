<%= form_for @todo do |f| %>
  <%= f.error_messages %>
    (by <b class='user' ><%= @todo.user rescue '?!?' %></b>)
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :where %><br />
    <%= f.text_field :where %>
  </p>
  <p>
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </p>
  <p>
    <%= f.label :priority %><br />
		<% [1,2,3,4,5].each do |prio| %>
		  <%= render_priority_icon(prio) %>
    	<%= f.radio_button("priority", prio ) %>
			<%= priority_name(prio) %>
			<br/>
    <% end %>
    <%#= f.range_field :priority %>
  </p>
  <p>
    <%= f.label :due %><br />
    <%= f.date_select :due %>
  </p>
  <p>
    <%= f.label :hide_until %><br />
    <%= f.datetime_select :hide_until %>
  </p>
  <p>
    <%= f.label :project_id %><br />
    <%#= collection_select("todo", :project_id , Project.find_all_by_user_id_and_active(current_user.id,true, :order => "id") , :id, :name , :include_blank => false ) %>
    <%= f.collection_select(:project_id , Project.find_all_by_user_id(current_user.id, :order => "id") , :id, :name_and_activity , :include_blank => false ) %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p><%= f.submit %></p>
<% end %>
