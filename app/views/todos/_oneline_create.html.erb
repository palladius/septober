<%
	@todo = Todo.new
	
%>
<div class='todo_oneline' >
<%= t(:quick_create) %>
<%= form_for @todo do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.text_field :name %>
    <%= f.date_select(:due) rescue "((DueErr: #{$!}))" %>
    <%= f.collection_select(:project_id , Project.find_all_by_user_id_and_active(current_user.id,true, :order => "id") , :id, :name , :include_blank => false ) rescue "((ProjErr: #{$!}))" %>
    <%#= collection_select("todo", :priority , $priorities_names, :id, :to_s , :include_blank => false ) rescue "((ProjErr: #{$!}))" %>
<%= f.submit 'Add' %></p>
<% end if logged_in? %>
</div>